function plot_distribution(W, nbins)
    if nargin < 3
        nbins = 10;
    end
    %hist(W, nbins);
    cmap = colormap('Lines');
    for i = size(W, 1)
        V = W(i, :);
        if nargin < 2
            plot_distribution(W);
        else
            plot_distribution(W, nbins);
        end
        c = cmap(i,:);
        h = findobj(gca, 'Type', 'patch');
        set(h, 'FaceColor', c)
        i = i + 1;
    end
    xlabel('copy numbers');
    ylabel('count');
end
